
@{
    ViewBag.Title = "Table";
}

@model List<PTcrud.Dbcomp.empl_dtl>
   

<div id="wrapper">
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Tables</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            DataTables Advanced Tables
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Employee ID</th>
                                            <th>NAME</th>
                                            <th>CONTACT NO</th>
                                            <th>EMAIL ADD.</th>
                                            <th>EDIT</th>
                                            <th>DELETE</th>
                                           
                                        </tr>
                                    </thead>
                                    <tbody>


                                        @foreach(var item in Model)
                                        {
                                        <tr class="odd gradeX">
                                            <td>@item.Emp_id</td>
                                            <td>@item.Emp_name</td>
                                            <td>@item.mb_no</td>
                                            <td>@item.email</td>
                                            <td ><a href="@Url.Action("Edit","Home",new { id = item.Emp_id })"<i class="fa fa-edit fa-fw"></i></td>
                                          <td ><a href="@Url.Action("Delete","Home",new { id = item.Emp_id })"<i class="fa fa-trash fa-fw"></i></td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                     
                                 
                         
                  
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-6 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->

</div>
